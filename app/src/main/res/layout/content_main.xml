<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:showIn="@layout/activity_main">

    <TextView
        style="@style/appheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/appheader"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="#009688"
        android:textStyle="bold"
        />

   <TableLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:stretchColumns="2"
       >

       <TableRow android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               style="@style/appFonts"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/bill_amount"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               />

           <EditText
               android:id="@+id/bill_amount"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               android:inputType="number"
               />
       </TableRow>


       <TableRow android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <TextView
               style="@style/appFonts"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/tip_percent"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="25dp"
               />
           <EditText
               android:id="@+id/tip_percent"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               android:inputType="number"
               />
       </TableRow>

       <TableRow>
           <TextView
               style="@style/appFonts"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/tip_amount"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               />
           <TextView
               android:id="@+id/tip_amount"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="20dp"
               />
       </TableRow>

       <TableRow>
           <TextView
               style="@style/appFonts"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/no_of_ppl"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               />
           <EditText
               android:id="@+id/no_of_ppl"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               android:inputType="number"
               />
       </TableRow>

       <TableRow>
           <TextView
               style="@style/appFonts"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/total_amount"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               />

           <TextView
               android:id="@+id/total_amount"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               />
       </TableRow>

       <TableRow android:layout_height="wrap_content">
           <TextView
               style="@style/appFonts"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/each_person_pay"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               />
           <TextView
               android:id="@+id/each_person_pay"
               android:layout_width="150dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="10dp"
               />
       </TableRow>
   </TableLayout>

   <Button
       android:id="@+id/calculate"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/calculate"
       android:layout_marginTop="35dp"
       android:layout_marginLeft="70dp"
       android:layout_marginRight="70dp"
       android:layout_gravity="center"
       android:background="#009688"
       android:onClick="calculateTip"
       />

</LinearLayout>